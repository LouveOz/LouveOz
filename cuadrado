#include <stdio.h>

int main()
{
    int i,j,num;
    printf("De que tama√±o quiere el cuadrado: ");
    scanf("%d", &num);
    
    for (i=0; i<num; i++){
        for (j=0; j<num; j++){
            if (i==0 || i==num-1 || j==0 || j ==num-1 || i==j || i+j==num-1){
                printf("X");
            }else{
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}